{
    "name": "marioblazek/open-weather-map-library",
    "description": "PHP wrapper for Open Weather Map API",
    "type": "library",
    "keywords": [
        "marioblazek",
        "openweathermap",
        "open-weather-map-library",
        "weather",
        "weather api"
    ],
    "homepage": "https://github.com/MarioBlazek/OpenWeatherMapLibrary",
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "Mario Bla≈æek",
            "email": "blazek.mario@gmail.com",
            "homepage": "http://marioblazek.com",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Marek\\OpenWeatherMap\\": "lib"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Marek\\OpenWeatherMap\\Tests\\": "tests"
        }
    },
    "require": {
        "php": "~5.6|~7.0",
        "zendframework/zend-hydrator": "^2.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.0",
        "friendsofphp/php-cs-fixer": "~2.0"
    },
    "scripts": {
        "test": "@php vendor/bin/phpunit --color=always",
        "fix": "@php vendor/bin/php-cs-fixer fix"
    },
    "config": {
        "sort-packages": true
    }
}
